        <link href="/css/styles.css" rel="stylesheet" />
        <link rel="stylesheet" href="/css/input.css">
    </head>
    <body>
        <div class="d-flex" id="wrapper">
            <div id="page-content-wrapper">
                <nav class="navbar navbar-light bg-light border-bottom">
                    <div class="container-fluid">
                      <a href="/" class="link-unstyled"><div class=" mt-3 mt-md-1 ms-2 ms-md-5 nav-item active"><i class="bi bi-house-door"></i> Home</div></a>
                            <div class="navbar-nav ms-auto mt-2 mt-lg-0 me-1 me-md-5">
                                <div class="nav-item active"><a class="nav-link" href="/users/login"><i class="bi bi-box-arrow-in-right"></i> Log In</a></div>
                            </div>

                    </div>
                </nav>
                <div class="container-fluid">
<div class="card w-90 mt-3 mx-auto" style="max-width:970px">
    <div class="card-body">
      <p class="card-text">
        <form action="/users/newuser" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text" id="basic-addon3">Display Name</span>
              <input type="text" name="user[dName]" class="form-control" id="dName" aria-describedby="basic-addon3" placeholder= "Someone">
            </div>
        </div>
            <div class="mb-3">
                <div class="input-group">
                  <span class="input-group-text" id="basic-addon3">Username</span>
                  <input type="text" name="user[username]" class="form-control" id="username" aria-describedby="basic-addon3" placeholder= "@$0m30n3">
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon3">Email</span>
                    <input type="email" name="user[email]" class="form-control" id="email" aria-describedby="basic-addon3" placeholder= "someone@email.com">
                </div>
            </div>
                <p id="passwordLabel">Password</p>
              <div class="input-group">
  <input type="password" id="password"  class="form-control rounded-right" name="user[password]" required placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;" >
  <button id="toggle-password" type="button" class="d-none"
    aria-label="Show password as plain text. Warning: this will display your password on the screen.">
  </button>
</div>

        <div class="input-group mb-3">
          <textarea class="form-control" placeholder="Tell us about yourself!" aria-label="With textarea" onkeyup="breetLength()" id="breetContent"  name="user[bio]" required>Tell us about yourself</textarea>
          <div class="invalid-feedback" id="contentFeedback">Bio cannot be empty</div>
          </div>

        <div class="file-upload mb-3">
          <div class="file-select">
            <div class="file-select-button" id="fileName">Choose File</div>
            <div class="file-select-name" id="noFile">No file chosen...</div> 
            <input type="file" name="user[image]" id="chooseFile">
          </div>
        </div>
  <button class="btn btn-warning px-3 " id="submitButton" disabled><i class="bi bi-pencil-square"></i> Submit</button>
    </div>
  </div>
</form>
<div id="words_count" class="mb-3"><span id="textcount"></span></div>
</div>
</div>
</div>

<footer class="mt-auto text-white-50">
  <p>&copy; 2023 Breeta</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
